vrrp_instance VI_1 {
    state {% if inventory_hostname == groups['load_balancers'][0] %}MASTER{% else %}BACKUP{% endif %}
    interface {{ interface }}
    virtual_router_id 51
    priority {% if inventory_hostname == groups['load_balancers'][0] %}100{% else %}90{% endif %}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 42secret
    }
    virtual_ipaddress {
        {{ vip }}/24
    }
}
